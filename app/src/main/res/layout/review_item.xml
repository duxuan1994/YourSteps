<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/footprint_light"
            android:layout_above="@+id/progressBar_ReviewSteps"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="90dp"
            android:text="2017-05-28"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_review_steps"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_review_date"
            android:layout_alignBottom="@+id/textView_review_date"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:text="1000"
            android:textSize="22sp" />

        <ProgressBar
            android:id="@+id/progressBar_ReviewSteps"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@color/darkWhite" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</LinearLayout>
